#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var { io } = require("../routes/users")
var debug = require('debug')('be:server');
var https = require('https');
var http = require('http');
let path = require("path")
let fs = require('fs')

/**
 * Get port from environment and store in Express.
 */

//https证书目录

let key = fs.readFileSync(path.resolve("https", "chst.vip.key"))
let cert = fs.readFileSync(path.resolve("https", "chst.vip.pem"))

let httpsOptions = {
    key,
    cert
}



var httpPort = normalizePort(process.env.PORT || 80);
var httpsPort = normalizePort(process.env.PORT || 443);
let httpApp = app.set('port', httpPort);
let httpsApp = app.set('port', httpsPort);
/**
 * Create HTTP server.
 */

var httpsServer = https.createServer(httpsOptions,httpsApp);
var httpServer = http.createServer(httpApp)
io.attach(httpsServer)
io.attach(httpServer)

/**
 * Listen on provided port, on all network interfaces.
 */

httpServer.listen(httpPort);
httpsServer.listen(httpsPort)
httpServer.on('error', onError);
httpServer.on('listening', onListening);
httpsServer.on('error', onError);
httpsServer.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof httpPort === 'string' ?
        'Pipe ' + httpPort :
        'Port ' + httpPort;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    var addr = httpServer.address();
    var bind = typeof addr === 'string' ?
        'pipe ' + addr :
        'port ' + addr.port;
    debug('Listening on ' + bind);
}